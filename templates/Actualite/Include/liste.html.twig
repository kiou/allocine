<div class="bloc">

    <div class="blocHeader">
        <h2 class="title">{{ 'actualite.include.liste.title'|trans }}</h2>
        <p>{{ 'actualite.include.liste.soustitle'|trans }}</p>
    </div>

    <div class="actualites">
        {% if actualites %}
            {% for actualite in actualites %}
                <div class="actualite navFull" data-url="{{ path('client_actualite_view',{'slug': actualite.slug, 'id': actualite.id})}}">
                    <div class="actualiteImage">
                        {% if actualite.image %}
                            <img src="{{ asset('img/actualite/miniature/' ~ actualite.image) }}">
                        {% else %}
                            <img src="{{ asset('img/actualite/miniature/alt.jpg') }}">
                        {% endif %}
                    </div>

                    <div class="actualiteBottom">
                        {% if actualite.categorie %}
                            <div class="actualiteCategorie">
                                <p>{{ actualite.categorie.nom }}</p>
                            </div>
                        {% endif %}

                        <div class="actualiteTitre">
                            <h3><a href="{{ path('client_actualite_view',{'slug': actualite.slug, 'id': actualite.id})}}">{{ TruncateText(actualite.titre, 30) }}</a></h3>
                        </div>

                        <div class="actualiteResume">
                            <p>{{ TruncateText(actualite.resume, 120) }}</p>
                        </div>

                        <div class="actualiteDate">
                            <p>{{ actualite.debut|date("d M Y") }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <p>{{ 'actualite.client.validators.empty'|trans }}</p>
        {% endif %}

        <div class="clear"></div>
    </div>

    <div class="blocFooter">
        <a href="{{ path('client_actualite_manager') }}" class="btn" data-btn="{{ 'actualite.include.liste.voirplus'|trans }}">{{ 'actualite.include.liste.voirplus'|trans }}</a>
    </div>

</div>